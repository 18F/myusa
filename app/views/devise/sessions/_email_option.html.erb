<div class="row">
  <div class="col-md-3 ">
  </div>
  <div class="col-md-9 ">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
      <div class="form-group">
        <label for="inputEmail3" class="sr-only">Email</label>
        <div class="col-sm-12">
           <%= label_tag 'inputEmail3', "Email", class: 'blue_header' %>
           <br/>
          <%= f.email_field :email, class: "form-control", id: "inputEmail3", autofocus: true, placeholder: 'Email Address', style: 'width: 200px;display: inline-block;float: left;border-top-right-radius: 0px;border-bottom-right-radius: 0px;'%>
          <%= submit_tag 'Connect', :class => 'btn btn-primary connect_button'%>            
          <br/>
          <br/>
          <div class="text-muted">
            * our never spam promise *
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
