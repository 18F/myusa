<div class="row divider"></div>
<section class="marketing">
	<div class="row">
		<div class="col-md-11 col-md-offset-1"><h1>Contact MyUSA</h1></div>
	</div>
	<div class="row">
		<div class="col-md-6 col-md-offset-1">
			<%= form_tag contact_path, role: "form" do |f| %>
			  <div class="form-group">
			    <%= label_tag 'Message:' %>
			    <%= text_area_tag 'message', nil, class: 'form-control', rows: 8 %>
			  </div>
			  <div class="form-group">
			    <%= label_tag 'From:' %>
			    <%= text_field_tag 'from', nil, class: 'form-control', placeholder: 'What should we call you?' %>
			  </div>
			  <div class="form-group">
			    <%= label_tag 'Return Field:' %>
			    <%= text_field_tag 'return_field', nil, class: 'form-control', placeholder: 'How should we get back to you?' %>
			  </div>
			  <%= submit_tag 'Submit', class: 'btn btn-primary' %>
			<% end %>
		</div>
		<div class="col-md-5">
			<div class="row">
				<div class="col-md-10">
					<small class="text-muted">
						Drop us a note, your name, and email if you are interested in adding MyUSA to your government services.
					</small>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<%= image_tag "http://placehold.it/350x350" %>
				</div>
			</div>
		</div>
	</div>
</section>