<section class="marketing" id="contact">
  <div class="top-border-blue">
    <div class="container">
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
          <h1 class="text-center">
            Still have questions? Drop us a line.
          </h1>
          <%= form_for :contact_us, url: contact_us_path, html: { id: 'contact-form', role: "form" } do |f| %>
            <div class="form-group">
              <%= f.label 'Message:' %>
              <%= f.text_area :message, class: 'form-control', rows: 8, placeholder: 'How can we help you?' %>
            </div>
            <div class="form-group">
              <%= f.label 'From:' %>
              <%= f.text_field :from, class: 'form-control', placeholder: 'What is your name?' %>
            </div>
            <div class="form-group">
              <%= f.label 'Return Email:' %>
              <%= f.text_field :return_email, class: 'form-control', placeholder: 'What is your email address?' %>
            </div>
            <%= f.submit 'Send Us Your Message', class: 'btn btn-primary width-100' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
