<section class="marketing">
	<div class="row">
		<div class="col-md-11 col-md-offset-1"><h1>Contact MyUSA</h1></div>
	</div>
	<div class="row">
		<div class="col-md-12 text-center">
			<div class="alert alert-success contact-flash hidden" role="alert"></div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6 col-md-offset-1">
			<%= form_for :contact_us, url: contact_us_path, html: { id: 'contact-form', role: "form" } do |f| %>
			  <div class="form-group">
			    <%= f.label 'Message:' %>
			    <%= f.text_area :message, class: 'form-control', rows: 8 %>
			  </div>
			  <div class="form-group">
			    <%= f.label 'From:' %>
			    <%= f.text_field :from, class: 'form-control', placeholder: 'What should we call you?' %>
			  </div>
			  <div class="form-group">
			    <%= f.label 'Return Email:' %>
			    <%= f.text_field :return_email, class: 'form-control', placeholder: 'How should we get back to you?' %>
			  </div>
			  <%= f.submit 'Submit', class: 'btn btn-primary' %>
			<% end %>
		</div>
		<div class="col-md-5">
			<div class="row">
				<div class="col-md-10">
					<small class="text-muted">
						Drop us a note, your name, and email if you are interested in adding MyUSA to your government services.
					</small>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<%= image_tag "http://placehold.it/350x350" %>
				</div>
			</div>
		</div>
	</div>
</section>
