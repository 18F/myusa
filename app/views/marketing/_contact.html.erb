<section class="marketing" id="contact">
  <div class="top-border-blue">
    <div class="container">
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
          <h1 class="text-center">
            Still have questions? Drop us a line.
          </h1>

          <%= form_tag contact_path, role: "form" do |f| %>
            <div class="form-group">
              <%= label_tag 'Message:' %>
              <%= text_area_tag 'message', nil, class: 'form-control', rows: 8 %>
            </div>
            <div class="form-group">
              <%= label_tag 'From:' %>
              <%= text_field_tag 'from', nil, class: 'form-control', placeholder: 'What should we call you?' %>
            </div>
            <div class="form-group">
              <%= label_tag 'Return Email:' %>
              <%= text_field_tag 'return_field', nil, class: 'form-control', placeholder: 'How should we get back to you?' %>
            </div>
            <%= submit_tag 'Submit', class: 'btn btn-primary width-100' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
