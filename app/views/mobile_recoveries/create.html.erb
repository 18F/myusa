<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <h2>Enter the code delivered to <%= @mobile_number %></h2>
  <p>A code has been sent to your mobile phone. Once you receive it please enter
  it here.</p>

  <%= form_for :mobile_confirmation, url: mobile_recovery_path, method: :patch do |f| %>
    <div class='row'>
      <%= f.label :raw_token %>
      <%= f.text_field :raw_token, class: 'form-control' %>
    </div>
    <br>
    <div class='row'>
      <%= f.submit value='Submit', class: 'btn btn-primary' %>
      <%= link_to 'Resend Code', mobile_recovery_resend_path, class: 'btn btn-default' %>
      <%= link_to 'Re-enter Mobile Number', new_mobile_recovery_path %>
    </div>
  <% end %>
</div>
