<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <h2>Enter the code delivered to the mobile number ending in <%= current_user.sms_code.mobile_number.last(4) %></h2>
  <p>A code has been sent to your mobile phone. Once you receive it please enter
  it here.</p>

  <%= form_for :sms, url: users_factors_sms_url do |f| %>
    <div class='row'>
      <%= f.label :raw_token, t(:token_label, scope: [:two_factor, :sms]) %>
      <%= f.text_field :raw_token, class: 'form-control' %>
    </div>
    <br>
    <div class='row'>
      <%= f.submit value='Submit', class: 'btn btn-primary' %>
      <%= link_to 'Resend Code', new_users_factors_sms_path, class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
